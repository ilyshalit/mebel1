# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Remove.bg API (опционально - используется rembg по умолчанию)
REMOVEBG_API_KEY=

# Kie.ai API (для Qwen Image Edit)
KIE_AI_API_KEY=your-kie-ai-api-key-here

# ImgBB API Key (для загрузки изображений на временный хостинг)
IMGBB_API_KEY=your-imgbb-api-key-here

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Public URL (для Cloudflare tunnel или ngrok)
# Запустите: cloudflared tunnel --url http://localhost:8000
# И вставьте сюда URL который выдаст cloudflared
PUBLIC_URL=https://juvenile-lloyd-relation-valued.trycloudflare.com

# File upload settings
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# AI Settings
GPT_MODEL=gpt-4o
GPT_MAX_TOKENS=1000
INPAINTING_MODEL=qwen/image-edit

# Учёт посетителей (SQLite: data/visits.db). Ключ для просмотра списка визитов в /admin или через API.
ADMIN_API_KEY=придумайте-секретный-ключ
