# Доступ по IP — только HTTP (без SSL), чтобы работало до настройки DNS
http://95.81.123.106 {
	encode gzip
	handle /api/* {
		reverse_proxy backend:8000
	}
	handle /results/* {
		reverse_proxy backend:8000
	}
	handle /uploads/* {
		reverse_proxy backend:8000
	}
	handle /catalog/* {
		reverse_proxy backend:8000
	}
	root * /srv
	file_server
}

# Домен — с автоматическим HTTPS (когда DNS указывает на сервер)
{$DOMAIN} {
	encode gzip
	handle /api/* {
		reverse_proxy backend:8000
	}
	handle /results/* {
		reverse_proxy backend:8000
	}
	handle /uploads/* {
		reverse_proxy backend:8000
	}
	handle /catalog/* {
		reverse_proxy backend:8000
	}
	root * /srv
	file_server
}
